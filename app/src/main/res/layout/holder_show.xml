<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    style="?android:listSeparatorTextViewStyle">

    <ImageView
        android:id="@+id/show_holder_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/show_holder_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_holder_image_view"
        android:layout_toEndOf="@+id/show_holder_image_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="NAME"
        android:textSize="32sp"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/show_holder_detail_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_holder_title_text_view"
        android:layout_toRightOf="@+id/show_holder_image_view"
        android:layout_toEndOf="@+id/show_holder_image_view"
        tools:text="DETAIL"
        android:textSize="24sp"
        android:padding="4dp"/>

</RelativeLayout>