<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivity.MainActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/txt_show_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_moving"
        android:textSize="17sp"/>

    <WebView
        android:layout_below="@+id/txt_show_welcome"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="95dp"
        android:id="@+id/random_stretch_gif"/>



    <Button
        android:layout_below="@+id/random_stretch_gif"
        android:layout_marginTop="80dp"
        android:id="@+id/show_stretching_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_finish"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"/>

</RelativeLayout>